{
    "env": {
        "es2021": true,
				"node": true,
				"jest": true
    },
    "extends": [
				"airbnb-base",
				"plugin:@typescript-eslint/recommended",
				"prettier/@typescript-eslint",
				"plugin:prettier/recommended"

    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
				"@typescript-eslint",
				"prettier"
    ],
    "rules": {
			"no-shadow":"off",
			"consistent-return":"off",

			"prettier/prettier":"error",
			"class-methods-use-this":"off",
			"import/extensions":[
				"error",
				"ignorePackages",
				{
					"ts":"never"
				}
			],
			"camelcase": "off"
		},
		"settings": {
			"import/resolver":{
				"typescript":{}
			}
		}
}
